<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyWallet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/circular_std_medium</item>
    </style>

    <style name="hintStyleBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/background_color</item>
        <item name="android:textColorHint">@color/background_color</item>
        <item name="android:textSize">12sp</item>
        <item name="boxBackgroundColor">@color/background_color</item>
        <item name="editTextBackground">@color/background_color</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="fontFamily">@font/circular_std_medium</item>
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/continue_btn_states</item>
    </style>

    <style name="MaterialButtonStyleMax" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/max_btn_states</item>
        <item name="android:textColor">@color/continue_btn_states</item>
    </style>

</resources>